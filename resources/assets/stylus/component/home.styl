.hero { 
    h1 {
        margin: 2.1rem 0 0 0;
        font-weight: bold;
   } 
    h5 {
        margin: 0 0 1rem 0;
    }
    .button {
        
        background-color: $black;
        color: white;
        padding: 15px;
        display: inline-block;
        width: 150px;
    }
}
.whatDo {
    padding: 15px;
    &:hover {
        transform: scale(1.1);
        transition: transform .2s linear;
        }
    p {
        color: $darkgray;
    }
    i {
        color: $blue;
    }
}
figure {
    figure();
}