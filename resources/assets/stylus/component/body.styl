body {
  background: url(/images/bg.jpg) no-repeat center center fixed; 
  background-size: cover;
  font-family: 'Roboto Mono', monospace;
  color: #212121;
}
h1, h2, h3, h4, h5, h6 {
  font-weight: 400;
  line-height: 1.1;
  text-transform: uppercase;
}
h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  font-weight: inherit;
}
h1 {
  font-size: 4.2rem;
  line-height: 110%;
  margin: 2.1rem 0 1.68rem 0;
}
h2 {
  font-size: 3.56rem;
  line-height: 110%;
  margin: 1.78rem 0 1.424rem 0;
}
h3 {
  font-size: 2.92rem;
  line-height: 110%;
  margin: 1.46rem 0 1.168rem 0;
}
h4 {
  font-size: 2.28rem;
  line-height: 110%;
  margin: 1.14rem 0 0.912rem 0;
}
h5 {
  font-size: 1.64rem;
  line-height: 110%;
  margin: 0.82rem 0 0.656rem 0;
}
h6 {
  font-size: 1rem;
  line-height: 110%;
  margin: 0.5rem 0 0.4rem 0;
}
em {
  font-style: italic;
}
strong {
  font-weight: 500;
}
small {
  font-size: 75%;
}
.title {
  margin-bottom: 1.5rem;
  h4 {
    margin: 1.14rem 0 0 0;
  }
  p {
    margin: 0;
  }
}
a {
  text-decoration: none;
}
hr {
  border: 0;
	border-top: 1px solid #B6B6B6;
  width: 100%;
}
img {
    max-width: 100%;
    height: auto;
}
.container {
  lost-center: 1140px;
  lost-utility: clearfix;
}
.row {
  lost-utility: clearfix;
  flex-flow: row wrap;
  display: flex;
}
.full {
  lost-column: 1;
}
.third {
  lost-column: 1/3;
  lost-column-cycle: 3;
  +mobile(){
    lost-column: 1;
    lost-column-cycle: 1;
  }
  +tablet(){
    lost-column: 1/2;
    lost-column-cycle: 2;
  }
}
.fourth {
  lost-column: 1/4;
  lost-column-cycle: 4;
}
.eight {
  lost-column: 1/8;
}
.box {
  margin-top: 10px;
  background-color: $whitetrans;
  box-shadow: 1px 1.732px 5px 0px rgba(4,5,6,.2);
  padding: 15px;
  word-wrap: break-word;
}

.blueBg {
  background-color: $bluetrans;
}
.whiteText {
  color: white;
}

.center {
    text-align: center;
}

.back-to-top {
  +mobile() {
    bottom: 0.5em;
    right: 0.5em;
  }
  position: fixed;
  bottom: 1em;
  right: 1em;
  display: inline-block;  
  color: $bluetrans;
  font-size: 1.5em;
  &:hover{
    cursor: pointer;
    color: #212121;
  }
}
