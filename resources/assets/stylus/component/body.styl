html {
  line-height: 1.5;
  font-family: "Roboto", sans-serif;
  font-weight: normal;
  color: #212121;
  background: url(/images/bg.jpg) no-repeat center center fixed; 
  background-size: cover;
  background-color: #00BCD4; 
}
h1, h2, h3, h4, h5, h6 {
  font-weight: 400;
  line-height: 1.1;
}
h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  font-weight: inherit;
}
h1 {
  font-size: 4.2rem;
  line-height: 110%;
  margin: 2.1rem 0 1.68rem 0;
}
h2 {
  font-size: 3.56rem;
  line-height: 110%;
  margin: 1.78rem 0 1.424rem 0;
}
h3 {
  font-size: 2.92rem;
  line-height: 110%;
  margin: 1.46rem 0 1.168rem 0;
}
h4 {
  font-size: 2.28rem;
  line-height: 110%;
  margin: 1.14rem 0 0.912rem 0;
}
h5 {
  font-size: 1.64rem;
  line-height: 110%;
  margin: 0.82rem 0 0.656rem 0;
}
h6 {
  font-size: 1rem;
  line-height: 110%;
  margin: 0.5rem 0 0.4rem 0;
}
em {
  font-style: italic;
}
strong {
  font-weight: 500;
}
small {
  font-size: 75%;
}
hr {
  border: 0;
	border-top: 1px solid #B6B6B6;
  width: 100%;
}
.container {
  lost-center: 1140px;
  lost-utility: clearfix;
}
.full {
  lost-column: 1;
}
.box {
  margin-top: 10px;
  background-color: rgba(255,255,255,.9);
  box-shadow: 1px 1.732px 5px 0px rgba(4,5,6,.2);
  padding: 15px;
  box-sizing: border-box;
  word-wrap: break-word;
}
.blue {
  background-color: rgba(25,118,210,.9)
}
.red {
  background-color: rgba(210,25,26,.9)
}
.green {
  background-color: rgba(118,210,25,.9)
}
.magneta {
  background-color: rgba(210,25,118,.9)
}
.orange {
  background-color: rgba(210,117,25,.9)
}
.whiteText {
  color: white;
}
+above(1000px){
  .e {
    margin-right: 0 !important;
  }
}
+below(1000px){
  .full,.half,.third,.quarter,.eighths,.one {
    lost-column: 1;
  }
}
.center {
    text-align: center;
}
.vcenter {
    display: flex;
    align-items: center;
    justify-content: center;
}
.back-to-top {
  +mobile() {
    bottom: 0.5em;
    right: 0.5em;
  }
  position: fixed;
  bottom: 1em;
  right: 1em;
  display: inline-block;  
  color: #00BCD4;
  font-size: 1.5em;
  &:hover{
    cursor: pointer;
    color: #1976D2;
  }
}

.dark-primary-color    { background: #1976D2; }
.default-primary-color { background: #2196F3; }
.light-primary-color   { background: #BBDEFB; }
.text-primary-color    { color: #FFFFFF; }
.accent-color          { background: #00BCD4; }
.primary-text-color    { color: #212121; }
.secondary-text-color  { color: #727272; }
.divider-color         { border-color: #B6B6B6; }