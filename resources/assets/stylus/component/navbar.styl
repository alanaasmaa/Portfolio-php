.navbar {
	z-index: 1000;
	line-height: 60px;
  	text-align: center;
	//overflow:hidden;
	padding: 0px;
}
nav {
    &:first-child {
		+mobile(){
			lost-column: 1;
			.hamMenu {
				display: inline-block;
			}
			.nav-trigger {
				position: absolute;
				clip: rect(0, 0, 0, 0);
			}
			label[for="nav-trigger"] {
				position: fixed;
				top: 15px;
				right: 15px;
				cursor: pointer;
			}
		}
		lost-column: 1/4 0 0;
		a {
			font-weight: 800;
			text-transform: uppercase;
			text-decoration : none;
			color: #333;
		}
	}
    &:nth-child(2) {
		+mobile(){
			display: none;
		}
		lost-column: 1/2 0 0;
		a:hover {
			border-bottom: 2px solid;
			border-color: #1976D2;
			transition: all linear 0.3s;
			color: #333;
		}	
	}
	&:last-child {
		+mobile(){
			display: none;
		}
		lost-column: 1/4 0 0;
	}
	.hamMenu {
		display: none;
	}
	ul {
		display: inline-flex;
		list-style: none;
		a {
			color: #333;
			font-size: 14px;
			text-transform: uppercase;
			text-decoration : none;
			font-weight: 600;
		}
		li {
			&:hover ul{
				display: block;
			}
			ul {
				display: none;
				position: absolute;
				padding: 10px;
				background-color: white;
				z-index: 1000;
			}
			&>a {
				display: flex;
				margin: 0 10px;
				border-bottom: 2px solid;
				border-color: transparent;
				color: #000;
				line-height: 20px;
				&.active {
					border-bottom: 2px solid;
					border-color: #2196F3;
				}
				i {
					line-height: 10px;
				}	
			}
		}
	}	
}