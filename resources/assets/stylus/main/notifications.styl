.flashmessage {
     color: #fff;
     padding: 15px;
     position: fixed;
     _position: absolute;
     text-shadow: 0 1px 0 rgba(0,0,0,.5);
     z-index 10000;
     right: 0px;
     bottom: 30px;
}

.info {
     background-color: #4ea5cd;
}

.error {
     background-color: #de4343;
}
     
.warning {
     background-color: #eaaf51;
}

.success {
     background-color: #61b832;
}

.flashmessage h3 {
     margin: 0 0 5px 0;                                                  
}

.flashmessage p {
     margin: 0;                                                  
}