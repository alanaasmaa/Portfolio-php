article {
    padding: 0 0 45px 0 !important;
    &:target {
        border-left: 4px solid $blue;
        border-right: 4px solid $blue;
    }
    img {
        height: 300px;
        object-fit: cover;
        min-width: 100%;
    }

    header {
        border-bottom: 2px solid $gray;
        //margin-bottom: 15px;
        margin: 0 30px;
        padding: 10px 0;
        h4 {
            text-align: center;
        }
    }

    dl {
        display:flex;
        justify-content: space-between;
        dd {
            margin 0 10px;
            color: $graytrans;
            i {
                color: $bluetrans;
            }
        }
    }
    p {
        padding: 15px 30px;
    }
    
}
.readmore {
    display:block;
    background-color: $blue;
    padding: 15px;
    text-align: center;
    color: $white;   
    float: right; 
}

.social-share {
    position: absolute;
    margin: 0 15px;
    &.right {
        right: 0;
        +below(1050px){
            right: initial;
        }
    }
    a {
        display: inline-flex;
        margin: 0 5px;
        padding: 15px 5px;
        font-size: 16px;
        color: $gray;
        transition: all .2s ease;
        &:hover {
            color: $blue;
        }
        .fa {
            text-shadow: 1px 1px 1px $white;
        }
    }
}
.source {
    color: $gray;
    padding-bottom: 0;
    position: absolute;
    &:hover {
            color: $blue;
        }
    +below(1050px){
        position: initial;
    }
}
.algolia-autocomplete {
    width: 100%;
    .aa-input, .aa-hint {
        width: 100%;
    }
    .aa-hint {
        color: #999;
    }
    .aa-dropdown-menu {
        width: 100%;
        background-color: #fff;
        border: 1px solid #999;
        border-top: none;
        .aa-suggestion {
            cursor: pointer;
            padding: 5px 4px;
            em {
                font-weight: bold;
                font-style: normal;
            }
        }
        &.aa-cursor {
            background-color: #B2D7FF;
        }
    }
}