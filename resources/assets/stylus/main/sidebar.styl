.sidebar {
    lost-column: 3/12;
    +below(1000px){
        display:none;
    }
    h5:before {
            content: "";
            display: block;
            width: 8px;
            height: 8px;
            float: left;
            margin-right: 10px;
            background-color: $blue;
            margin-top: 5px;
    }
    li {
        padding: 5px 0;
        position: relative;
        a {
            color: $darkgray;
            font-weight: 800;
            transition: all .2s ease;
            font-size: 1em;
            padding-left: 15px;
            &:hover {
                color: $blue;
            }
            &:before {
                content: '\203a';
                position: absolute;
                font-size: 1.5em;
                line-height: 1em;
                top: 0em;
                left: 0;
            }
        }
    }
}

.sideContent {
    lost-column: 9/12;
    +below(1000px){
        lost-column: 1;
    }
}

.tag {
    background: alpha($white,.9);
    color: $blue;
    margin-top: 5px;
    display: inline-flex;
    transition: all .2s ease;
    font-weight: 800;
    box-shadow: 1px 1px 2px 0px $blacktrans;
    &:hover {
        box-shadow: none;
        background: alpha($blue,.9);
        color: $white;
        transform: scale(1.01);
    }
    &:active {
        transform: scale(.9);
    }
    a {
        padding: 5px 10px;
    }
}
